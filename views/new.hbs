<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <h1 class="title">Create Restaurant</h1>
    </div>
  </div>
</div>

<form action="/restaurants" method="POST">
  <div class="new-form">
    <label>Name :</label>
    <input type="text" placeholder="Name" name="name">
    <label>Adress :</label>
    <input type="text" placeholder="Location" name="location">
    <label>Phone Number:</label>
    <input type="text" placeholder="02-XXXXXXX" name="phone">
    <label>Score Rating :</label>
    <input type="number" placeholder="4.X" name="rating" max="5" step="0.1">
    <label>Description :</label>
    <textarea name="description" id="description" cols="30" rows="10">This restaurant...</textarea>
    <label>Image URL:</label>
    <input type="text" placeholder="http://..." name="image">
    <label>Food Category :</label>
    <input type="text" placeholder="Chinese/Japanese..." name="category">
    
  </div>
  <button type="submit" class="form-button">Create</button>
</form>